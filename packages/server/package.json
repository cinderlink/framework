{
  "name": "@cinderlink/server",
  "description": "Federated pinning & messaging server for Cinderlink networks",
  "authors": "Drew Ewing <drew@cinderlink.com>",
  "version": "1.0.0-next.0",
  "type": "module",
  "tshy": {
    "exports": {
      ".": "./src/index.ts",
      "./package.json": "./package.json"
    },
    "exclude": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts"
    ]
  },
  "scripts": {
    "build": "bun run build.ts",
    "watch": "bun run build.ts --watch",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      },
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/commonjs/index.js",
  "types": "dist/index.d.ts",
  "module": "./dist/esm/index.js",
  "dependencies": {
    "@cinderlink/client": "workspace:*"
  },
  "devDependencies": {
    "@cinderlink/core-types": "workspace:*",
    "@cinderlink/tsconfig": "workspace:*",
    "@types/node": "^18.19.107",
    "dids": "^5.0.3",
    "helia": "^5.4.2",
    "typescript": "^5.8.3",
    "vitest": "^0.30.1",
    "bun-dts": "^0.1.70"
  },
  "peerDependencies": {
    "dids": "^5.0.3",
    "helia": "^5.4.2"
  }
}
