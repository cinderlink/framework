    "ipfs-http-gateway": "^0.13.0",
    "ipfs-http-server": "^0.15.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  },
  "peerDependencies": {
    "@candor/client": "@candor/client",
    "ipfs-core": "^0.17.0"
  }
