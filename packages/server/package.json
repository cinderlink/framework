{
  "name": "@candor/server",
  "description": "Federated pinning & messaging server for Candor networks",
  "authors": "Drew Ewing <drew@cinderlink.com>",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
