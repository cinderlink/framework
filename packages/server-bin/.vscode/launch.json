  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: Start Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "ts-node-esm",
      "args": ["src/bin.ts", "start"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "trace": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "node_modules/@cinderlink/**"
      ],
      "sourceMapPathOverrides": {
        "@cinderlink/*": "${workspaceFolder}/node_modules/@cinderlink/*"
      }
    }
  ]
}
