{
  "name": "@candor/server-bin",
  "description": "Candor server binary",
  "authors": "Drew <drew@cinderlink.com>",
  "version": "1.0.0-rc.1",
  "main": "dist/bin.js",
  "type": "module",
  "module": "./dist/bin.js",
  "types": "./dist/bin.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bin.js",
      "require": "./dist/bin.cjs",
      "types": "./dist/bin.d.ts"
    }
  },
  "bin": {
    "candor": "dist/bin.js"
  },
  "scripts": {
    "build": "tsup src/bin.ts --format cjs,esm --dts ",
    "watch": "pnpm build --watch",
    "test": "vitest"
  },
  "dependencies": {
    "@candor/client": "workspace:../client",
    "@candor/server": "workspace:../server",
    "ipfs-http-gateway": "^0.13.0",
    "ipfs-http-server": "^0.15.0",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.2",
    "chalk": "^5.2.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.6.2",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  }
}
