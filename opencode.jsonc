{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "theme": "opencode",
  "model": "lmstudio/glm-4.7",
  "autoupdate": true,
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "druid-coder-30b": {
          "name": "Druid Coder 30b (vibes, local)"
        },
        "minimax-m2.1-prism": {
          "name": "Minimax M2.1 (prism, local)"
        },
        "openai/gpt-oss-120b": {
          "name": "GPT OSS 120b (local)"
        },
        "glm-4.7": {
          "name": "GLM-4.7 (mlx, local)"
        },
        "unsloth/glm-4.7": {
          "name": "GLM-4.7 (unsloth, local)"
        }
      }
    }
  },
  "mcp": {
    "vibes": {
      "type": "local",
      "command": [
        "bun",
        "/Users/aewing/Projects/phx.digital/exemplar/src/bin/vibes.ts",
        "dev",
        "mcp",
        "serve"
      ],
      "enabled": true
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "YOUR_API_KEY"
      ],
      "enabled": true
    }
  }
}
